{% extends "::base.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('/css/main.css') }}" />
{% endblock %}

{% block title %}Backend{% endblock %}

{% block body %}
<h1>Jobs overzicht</h1>

<table>
<tr>
<th>Titel</th>
<th>Bewerken</th>
<th>Verwijderen</th>
</tr>

{% for job in jobs %}
<tr>
<td>{{ job.title }}</td>
<td><a href="{{ job.editlink }}">bewerk</a></td>
<td><a href="{{ job.deletelink }}">verwijder</a></td>
</tr>
{% endfor %}

</table>


<a href="{{ links.addJob }}" >Job toevoegen</a>
{% endblock %}