{% extends "RadixRecruitmentBundle:Backend:base.html.twig" %}

{% block title %}Backend{% endblock %}

{% block body %}

<div class='frontend-link'>
{{ carrot.pageLinks.frontendLink|raw }}
</div>

<div class='backend-pagelinks'>
{{ carrot.pageLinks.backendLinks|raw }}
</div>

<h1>Application for {{ carrot.job.title }}</h1>
Name : {{ carrot.application.name }}<br />
Email : {{ carrot.application.email }}<br />
City : {{ carrot.application.city }}<br />
<h2>Work experience</h2>
{% for work in carrot.work %}
{{ work.employer}} - {{ work.location }} - {{ work.position }}<br />
<br />
{% endfor %}

<h2>Education</h2>
{% for education in carrot.education %}
{{ education.school }} - {{ education.type }} - {{ education.year }}<br />
<br />
{% endfor %}
{% endblock %}