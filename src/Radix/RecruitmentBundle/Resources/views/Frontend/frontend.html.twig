{% extends "::base.html.twig" %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="{{ asset('/css/main.css') }}" />
{% endblock %}

{% block title %}Frontend{% endblock %}

{% block body %}
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/nl_NL/all.js#xfbml=1&appId=600850943303218";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<h1>Jobs</h1>
{% for job in jobs %}
<div class="job">
<h2><a href="{{ job.pagelink }}">{{ job.title }}</a></h2>
<div class="fb-share-button" data-href="{{ job.pagelink }}" data-type="button_count"></div>
</div>
{% endfor %}
{% endblock %}