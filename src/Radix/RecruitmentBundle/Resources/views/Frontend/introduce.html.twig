{% extends "RadixRecruitmentBundle:Default:base.html.twig" %}

{% block title %}Frontend{% endblock %}

{% block bodyclasses %}index{% endblock %}

{% block headerscripts %}
<script type="text/javascript">
$(document).ready(function() {
  $('a.send-msg').click(function(e) {
    e.preventDefault();
    var uid = $(this).attr('id');
		FB.ui({
		  method: 'send',
      to: uid,
      link: 'http://www.deredactie.be'
		});
  });
});
</script>
{% endblock %}

{% block body %}
{{ parent() }}

{% if carrot.pageLinks.adminLink %}
<div class='admin-link'>
{{ carrot.pageLinks.adminLink|raw }}
</div>
{% endif %}

{% for flashMessage in app.session.flashbag.get('notice') %}
<div class="flash-notice">
{{ flashMessage }}
</div>
{% endfor %}

{% if carrot.banner %}
<div class="banner">
{{ carrot.banner|raw}}
</div>
{% endif %}

<div class="columns clearfix">
<div class="column-main">

<div class="connections">
{% for connection in carrot.connections %}
<div class="connection">
<div class="image"><img src="{{ connection.pic_small }}" /></div>
<div class="name">{{ connection.name }}</div>
<div class="message-link">{{ connection.link|raw }}</div>
</div>
{% endfor %}
</div> <!-- connections -->

</div>
<div class="column-right">
Kolom rechts - hier ook?
</div>
</div>


{% endblock %}